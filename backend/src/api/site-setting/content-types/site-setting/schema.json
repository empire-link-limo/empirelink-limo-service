{
  "kind": "collectionType",
  "collectionName": "site_settings",
  "info": {
    "singularName": "site-setting",
    "pluralName": "site-settings",
    "displayName": "Site Setting"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "companyName": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "address": {
      "type": "text",
      "required": true
    },
    "logo": {
      "allowedTypes": [
        "images",
        "files"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "facebookUrl": {
      "type": "string",
      "required": true
    },
    "instagramUrl": {
      "type": "string",
      "required": true
    },
    "twitterUrl": {
      "type": "string",
      "required": true
    },
    "linkedinUrl": {
      "type": "string",
      "required": true
    },
    "defaultSeo": {
      "type": "component",
      "repeatable": true,
      "component": "shared.seo",
      "required": true
    }
  }
}
